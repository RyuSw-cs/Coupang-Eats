<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/view_margin_8"
    android:background="@drawable/bg_store_review">

    <ImageView
        android:id="@+id/iv_review"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="@dimen/view_margin_12"
        android:src="@drawable/ic_home_western_food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/home_tv_biggest_review"
        android:textColor="@color/black"
        android:textSize="@dimen/view_margin_12"
        app:layout_constraintStart_toEndOf="@id/iv_review"
        app:layout_constraintTop_toTopOf="@id/iv_review" />

    <RatingBar
        android:id="@+id/rb_review"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_8"
        android:secondaryProgressTint="@color/transparent"
        android:progressBackgroundTint="@color/grayForRatingBar"
        android:progressTint="@color/yellowForRatingBar"
        android:stepSize="1.0"
        app:layout_constraintBottom_toBottomOf="@id/iv_review"
        app:layout_constraintStart_toEndOf="@id/iv_review" />

</androidx.constraintlayout.widget.ConstraintLayout>