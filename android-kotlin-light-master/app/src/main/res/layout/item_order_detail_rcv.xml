<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grayForDivider"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:text="1"
        android:layout_marginTop="@dimen/text_margin_4"
        android:textColor="@color/black"
        android:textSize="@dimen/text_content_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_food_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_8"
        android:text="음식 제목"
        android:textColor="@color/black"
        android:textSize="@dimen/text_content_16"
        app:layout_constraintBottom_toBottomOf="@id/tv_count"
        app:layout_constraintStart_toEndOf="@id/tv_count"
        app:layout_constraintTop_toTopOf="@id/tv_count" />

    <TextView
        android:id="@+id/tv_food_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_8"
        android:layout_marginTop="@dimen/view_margin_6"
        android:layout_marginBottom="@dimen/view_margin_8"
        android:text="옵션"
        android:textColor="@color/black"
        android:textSize="@dimen/text_content_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_count"
        app:layout_constraintTop_toBottomOf="@id/tv_food_title" />


</androidx.constraintlayout.widget.ConstraintLayout>