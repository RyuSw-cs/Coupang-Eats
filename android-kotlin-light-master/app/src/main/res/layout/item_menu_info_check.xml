<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/view_margin_12"
        android:layout_marginBottom="@dimen/view_margin_12"
        android:background="@drawable/bg_menu_check"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_12"
        android:text="체크 메뉴 "
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_content_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cb_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_menu_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+2000)"
        android:textColor="@color/grayForText"
        android:gravity="center"
        android:textSize="@dimen/text_content_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu_title"
        app:layout_constraintStart_toEndOf="@id/tv_menu_title"
        app:layout_constraintTop_toTopOf="@+id/tv_menu_title" />

</androidx.constraintlayout.widget.ConstraintLayout>