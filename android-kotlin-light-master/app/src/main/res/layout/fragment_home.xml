                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_sub_banner" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_new_store_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_new_store_title" />

            <View
                android:id="@+id/div_new_store"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/grayForDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_new_store_list"/>


            <TextView
                android:id="@+id/tv_choice_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/view_margin_14"
                android:text="@string/home_tv_choice_store"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_18"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_new_store" />


            <HorizontalScrollView
                android:id="@+id/sv_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choice_store">

                <!-- 정렬 탭을 담을 레이아웃 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ly_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ly_sort_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/view_margin_6"
                        android:paddingEnd="@dimen/view_margin_6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:drawableStart="@drawable/ic_sort_pick"
                            android:drawablePadding="4dp"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="초기화 "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_popular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/view_margin_8"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:drawableEnd="@drawable/ic_sort_pick"
                            android:drawablePadding="4dp"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="@string/home_tv_sort_popular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_fast_delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/view_margin_8"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:drawableStart="@drawable/ic_home_smallest_fast_delivery"
                            android:drawablePadding="4dp"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="@string/home_tv_fast_delivery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_delivery_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/view_margin_8"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:drawableEnd="@drawable/ic_sort_pick"
                            android:drawablePadding="4dp"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="@string/home_tv_delivery_cost"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_least_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/view_margin_8"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:drawableEnd="@drawable/ic_sort_pick"
                            android:drawablePadding="4dp"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="@string/home_tv_least_cost"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_take_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/view_margin_8"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="@string/home_tv_take_out"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_discount_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/view_margin_8"
                            android:background="@drawable/bg_sort_btn_non_selected"
                            android:minWidth="1dp"
                            android:minHeight="1dp"
                            android:paddingStart="14dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="6dp"
                            android:text="@string/home_bt_discount_coupon"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_content_14" />
                    </LinearLayout>

                    <View
                        android:id="@+id/div_sort"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:elevation="6dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_home_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sv_sort" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.amar.library.ui.StickyScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_cart_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueForBtn"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_cart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_btn"
            android:paddingStart="@dimen/view_margin_6"
            android:paddingTop="2dp"
            android:paddingEnd="@dimen/view_margin_6"
            android:paddingBottom="2dp"
            android:text="1"
            android:textColor="@color/blueForBtn"
            android:textSize="@dimen/text_content_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_see_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_4"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="카트 보기"
            android:textColor="@color/white"
            android:textSize="@dimen/text_content_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_cart_count"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_4"
                android:text="쿠페이머니 결제 시 166원 적립"
                android:textColor="@color/white"
                android:textSize="@dimen/text_content_12" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="33,000원"
                android:textColor="@color/white"
                android:textSize="@dimen/text_content_12"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
